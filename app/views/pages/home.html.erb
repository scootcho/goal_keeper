    <div class="title">
      Next goal
    </div>
    <div class="row">
      <div class="col-xs-10 col-sm-6 center-block">
        <div class="frame">
          <div class="thumbnail">
            <%= image_tag("sd.jpg") %>
          </div>
          <div class="row">
            <h3>Vacation to San Diego!</h3>
          </div>
          <div class="row">
            <div id="due">Due: <span>08/30/15</span></div>
            <div id="budget">Budget: <span>$1,000</span></div>
          </div>
        </div>
      </div>
    </div>
