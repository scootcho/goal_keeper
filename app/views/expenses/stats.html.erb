<div id="page-title">
  Statistics
</div>
<div id="piechart">
  <%= image_tag('piechart.png') %>
</div>

<% @expenses.each do |expense| %>
  <p><%= expense.transaction_date %></p>
  <%= expense.description %>
  <%= expense.category.name %>
  <%= expense.amount %>
<% end %>

<%= link_to "create new transaction", new_expense_path, class: "flat-btn" %>

<%= link_to "see all transactions", expenses_path, class: "flat-btn", id: "stick-to-bottom" %>